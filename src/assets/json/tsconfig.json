{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/assets/**/*.json"  // Ajout de cette ligne pour inclure les fichiers JSON dans le dossier assets
  ]
}
